<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blaj.beercatalogue">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.BeerCatalogue">
        <activity
            android:name=".accounts.UserActivity"
            android:exported="true"
            android:label="@string/title_activity_user"
            android:theme="@style/Theme.BeerCatalogue.NoActionBar" />
        <activity
            android:name=".accounts.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".accounts.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".about.InfoActivity"
            android:exported="true"
            android:label="@string/title_activity_info"
            android:theme="@style/Theme.BeerCatalogue.NoActionBar" />
    </application>

</manifest>